<!-- Views/Carrito/Index.cshtml -->
@model SistemaLicencias.ClienteApp.Models.CarritoViewModel
@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container">
    <h2 class="mb-4">
        <i class="bi bi-cart3"></i> Mi Carrito de Compras
    </h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-cart-x" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Tu carrito está vacío</h4>
            <p>Agrega productos desde nuestro catálogo</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-shop"></i> Ir al Catálogo
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>Subtotal</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Nombre</strong>
                                            </td>
                                            <td>S/ @item.Precio.ToString("N2")</td>
                                            <td>
                                                <form asp-action="ActualizarCantidad" method="post" class="d-inline">
                                                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                                                    <div class="input-group" style="width: 120px;">
                                                        <input type="number"
                                                               name="cantidad"
                                                               value="@item.Cantidad"
                                                               min="1"
                                                               max="10"
                                                               class="form-control form-control-sm"
                                                               onchange="this.form.submit()">
                                                    </div>
                                                </form>
                                            </td>
                                            <td><strong>S/ @item.Subtotal.ToString("N2")</strong></td>
                                            <td>
                                                <form asp-action="EliminarProducto" method="post" class="d-inline">
                                                    <input type="hidden" name="idProducto" value="@item.IdProducto" />
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                            onclick="return confirm('¿Eliminar este producto?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Seguir Comprando
                    </a>
                    <form asp-action="LimpiarCarrito" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="return confirm('¿Vaciar el carrito?')">
                            <i class="bi bi-trash"></i> Vaciar Carrito
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Resumen del Pedido</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>S/ @Model.Subtotal.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>IGV (18%):</span>
                            <strong>S/ @Model.IGV.ToString("N2")</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Total:</h5>
                            <h5 class="text-primary">S/ @Model.Total.ToString("N2")</h5>
                        </div>

                        <a asp-action="DatosCliente" class="btn btn-success w-100 btn-lg">
                            <i class="bi bi-credit-card"></i> Proceder al Pago
                        </a>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="bi bi-shield-check"></i> Compra 100% segura
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
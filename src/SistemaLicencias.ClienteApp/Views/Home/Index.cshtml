<!-- Views/Home/Index.cshtml -->
@model List<SistemaLicencias.ClienteApp.Models.ProductoViewModel>
@{
    ViewData["Title"] = "Catálogo de Licencias";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4">
            <i class="bi bi-box-seam text-primary"></i> Catálogo de Licencias
        </h1>
        <p class="lead">Encuentra las mejores licencias de software para tus necesidades</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle"></i>
            No hay productos disponibles en este momento.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var producto in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 product-card shadow-sm">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <i class="bi bi-box-seam text-primary" style="font-size: 4rem;"></i>
                            </div>
                            <h5 class="card-title">@producto.Nombre</h5>

                            <div class="mb-3">
                                @if (producto.CantidadLicenciasDisponibles > 0)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i>
                                        @producto.CantidadLicenciasDisponibles disponibles
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Agotado
                                    </span>
                                }
                            </div>

                            <h3 class="text-primary mb-3">
                                S/ @producto.Precio.ToString("N2")
                            </h3>

                            <form asp-controller="Carrito" asp-action="AgregarProducto" method="post">
                                <input type="hidden" name="idProducto" value="@producto.IdProducto" />

                                <div class="mb-3">
                                    <label class="form-label">Cantidad:</label>
                                    <input type="number"
                                           class="form-control"
                                           name="cantidad"
                                           value="1"
                                           min="1"
                                           max="@producto.CantidadLicenciasDisponibles"
                                           @(producto.CantidadLicenciasDisponibles == 0 ? "disabled" : "")>
                                </div>

                                <button type="submit"
                                        class="btn btn-primary w-100"
                                        @(producto.CantidadLicenciasDisponibles == 0 ? "disabled" : "")>
                                    <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>